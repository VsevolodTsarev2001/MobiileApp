<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MobiileApp.Clicker"
             BackgroundColor="Black">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderColor" Value="White"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <VerticalStackLayout>
            <Label Text="Score: 0" FontSize="24"/>
            <Label Text="Upgrade: 20 score" FontSize="18" IsVisible="False"/>
        </VerticalStackLayout>

        <Button x:Name="Clickerbtn" WidthRequest="350" HeightRequest="350" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button x:Name="Upgradebtn" Text="Upgrade. LVL: 0" WidthRequest="200" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="End" IsVisible="False"/>
    </Grid>
</ContentPage>
