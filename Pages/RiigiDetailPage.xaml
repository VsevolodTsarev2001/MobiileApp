<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiileApp.Pages.RiigiDetailPage"
             Title="Riigi info">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Image x:Name="lippImage" HeightRequest="100" />
            <Entry x:Name="nimiEntry" Placeholder="Riigi nimi" />
            <Entry x:Name="pealinnEntry" Placeholder="Pealinn" />
            <Entry x:Name="kirjaldusEntry" Placeholder="Kirjaldus" />
            <Entry x:Name="rahvaarvEntry" Placeholder="Rahvaarv" Keyboard="Numeric" />
            <Entry x:Name="lippEntry" Placeholder="Lipu URL" />
            <Button Text="Uuenda" Clicked="OnUpdateClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
